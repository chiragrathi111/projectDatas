<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "https://www.eclipse.org/jetty/configure_10_0.dtd">

<Configure class="org.eclipse.jetty.webapp.WebAppContext">
	<!-- IDEMPIERE-2490 -->
	<Set name="maxFormContentSize">1048576</Set>
	<Set name="maxFormKeys">2000</Set>
	
	<!-- Hide Jetty version from error pages -->
	<Get name="errorHandler">
		<Set name="showServlet">false</Set>
		<Set name="showStacks">false</Set>
		<Set name="showMessageInTitle">false</Set>
		<Call name="addErrorPage">
			<Arg type="int">404</Arg>
			<Arg type="String">/error404.zul</Arg>
		</Call>
		<Call name="addErrorPage">
			<Arg type="int">500</Arg>
			<Arg type="String">/error500.zul</Arg>
		</Call>
	</Get>
	
	<!-- Hide server version header -->
	<Call name="setAttribute">
		<Arg>org.eclipse.jetty.server.Server.version</Arg>
		<Arg></Arg>
	</Call>
</Configure>
